generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model products {
  id                String              @id @default(dbgenerated("gen_random_uuid()"))
  title             String              @unique
  description       String              @db.VarChar(500)
  created_at        DateTime            @default(now())
  warehouseProducts warehouse_product[]
}

model warehouses {
  id                String              @id @default(dbgenerated("gen_random_uuid()"))
  title             String              @unique
  location          String
  description       String              @db.VarChar(500)
  warehouseProducts warehouse_product[]
}

model warehouse_product {
  warehouse    warehouses @relation(fields: [warehouse_id], references: [id])
  warehouse_id String
  product      products   @relation(fields: [product_id], references: [id])
  product_id   String
  quantity     Int

  @@id([warehouse_id, product_id])
}

model stock_changes {
  id                          Int      @id @default(autoincrement())
  product_title               String
  action                      String // remove, transfer, update, add
  source_warehouse_title      String
  destination_warehouse_title String?
  created_at                  DateTime @default(now())
  quantity                    Int

  @@index([created_at])
  @@index([source_warehouse_title]) // if we want to query a specific warehouse stock history 
  @@index([product_title])
}
