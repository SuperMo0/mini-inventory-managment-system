{
  // Visit https://aka.ms/tsconfig to read more about this file
  "extends": [
    "./node_modules/@tsconfig/node-lts/tsconfig.json"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2023",
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "types": [
      "vitest/globals",
      "supertest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "generated"
  ]
}