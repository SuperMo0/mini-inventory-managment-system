  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2023",
    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true
